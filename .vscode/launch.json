    "version": "0.2.0",
    "configurations": [{
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/src/index.js",
            "args": [
                "-vvvv",
                "search",
                "pokemon",
                "-l",
                "41"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test Auth",
            "program": "${workspaceRoot}/tests/searchtest.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts",
                "--colors",
                "tests/**.spec.js"
            ],
            "cwd": "${workspaceRoot}"
        }
    ]
}